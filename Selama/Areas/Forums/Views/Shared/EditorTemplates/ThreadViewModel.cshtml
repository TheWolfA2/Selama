@using Microsoft.AspNet.Identity
@using Selama.Areas.Forums.Models
@model ThreadViewModel

@Scripts.Render("~/bundles/MarkdownDeep")
@Styles.Render("~/Content/MarkdownDeep/css")

<div class="form-group">
    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-md-11">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-xs-12 col-sm-12 col-md-11">
        <div class="markdown-wrap">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control mdd_editor" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

@if (Thread.CanPinOrLockThreads(User))
{
    <div class="form-group">
        @Html.LabelFor(model => model.IsPinned, new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.IsPinned, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsPinned, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsLocked, new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.IsLocked, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
        </div>
    </div>
}
