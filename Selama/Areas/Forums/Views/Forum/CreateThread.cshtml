@model Selama.Areas.Forums.ViewModels.ThreadViewModel

@{
    ViewBag.Title = "CreateThread";
}

<h2>CreateThread</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add a thread</h4>
        <hr />
        
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
